{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "incremental": false,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./",
        "sourceMap": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "noImplicitAny": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "dist"]
}
