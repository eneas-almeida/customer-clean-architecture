{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": ["standard"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "no-use-before-define": "off",
        "no-useless-constructor": "off",
        "no-redeclare": "off"
    }
}
